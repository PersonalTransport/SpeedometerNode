node_capability_file;
LIN_language_version = "2.2";
node speedometer {
	general {
		LIN_protocol_version = "2.2";
		supplier = 0x4854;
		function = 0x0022;
		variant  = 0;
		bitrate = automatic min 10 kbps max 20 kbps;
		sends_wake_up_signal = "no";
	}
	diagnostic {
		NAD = 0x43;
		diagnostic_class = 1;
	}
	frames {
		publish speedometer_frame {
			length = 5;
			signals {
				axle_rpm {
					size       = 16;
					init_value = 0;
					offset 	   = 0;
					speed_encoding;
				}
				axle_rotations {
					size = 16;
					init_value = 0;
					offset = 16;
					distance_encoding;
				}
				speedometer_error_bit {
					size = 1;
					init_value = 0;
					offset = 32;
				}
			}
		}
	}
	encoding {
		speed_encoding { physical_value, 0, 0xFFFF,0.059499,0,"The speed of the vehicle [0,60]MPH; if the vehicle has 20 inch diameter tires."; }
		distance_encoding { physical_value, 0, 0xFFFF,0.253866,0,"The distance the vehicle has traveled in miles since reset."; }
	}
	status_management {
		response_error = speedometer_error_bit;
	}
}
